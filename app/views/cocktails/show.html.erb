<p id="notice"><%= notice %></p>


<h1><%= @cocktail.name %></h1>
<h2>Ingredients</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= Ingredient.find(dose.ingredient_id).name %> - <%= dose.description %>
      | <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<%= image_tag @cocktail.image_url %>

<%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail)  %>
<%= link_to 'Back', cocktails_path %>


<hr>

<% @cocktail.reviews.each do |review| %>

  <% review.rating.times do %>
    <i class="fas fa-star"></i>
  <% end %>
  <% (5 - review.rating).times do %>
    <i class="far fa-star"></i>
  <% end %>

  <span>&nbsp;&nbsp;&nbsp;<%= review.content %></span>
  <br>
<% end %>

<%= link_to 'Add A New Review', new_cocktail_review_path(@cocktail) %>

<hr>
<hr>
<hr>

